.products_form
  = form_with(scope: "price_list", url: price_lists_path, method: :post) do |form|
    .form-group
      = form.label(:name, "Название Списка Цен")
      = form.text_field(:name)
    .form-group
      = form.label("Выберите вложение или вложения", class: "header")
      = form.file_field(:attachments, class: 'form-control-file', required: true, multiple: true)
    .form-group
      b Внимательно введите эти параметры, если они отличаются!
    .form-group
      = form.label(:header_brand, "Название поля 'Производитель' из csv-списка")
      = form.text_field(:header_brand, value: "Производитель")
    .form-group
      = form.label(:header_code, "Название поля 'Артикул' из csv-списка")
      = form.text_field(:header_code, value: "Номер")
    .form-group
      = form.label(:header_stock, "Название поля 'Количество' из csv-списка")
      = form.text_field(:header_stock, value: "Кол-во")
    .form-group
      = form.label(:header_cost, "Название поля 'Цена' из csv-списка")
      = form.text_field(:header_cost, value: "Цена")
    .form-group
      = form.label(:header_name, "Название поля 'Наименование' из csv-списка")
      = form.text_field(:header_name, value: "Наименование")
    .form-group
      = form.label(:delimeter, "Символ для разделителя")
      = form.text_field(:delimeter, value: ";")
    .form-group
      = form.label(:encoding, "Кодировка файла")
      = form.text_field(:encoding, value: "windows-1251")

    .actions.form-group
      = form.submit("Обработать список", class: "confirm-button")
